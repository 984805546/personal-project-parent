<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fs.dao.order.OrderCartDao">
    <resultMap id="cart" type="com.fs.entity.order.OrderCart">
        <id property="cartId" column="cartId"/>
        <result property="customerId" column="customerId"/>
        <result property="productId" column="productId"/>
        <result property="productAmount" column="productAmount"/>
        <result property="price" column="price"/>
        <result property="addTime" column="addTime"/>
        <result property="modifiedTime" column="modifiedTime"/>
    </resultMap>
    <select id="getAll" resultMap="cart">
        select customerId,productId,productAmount,price,addTime,modifiedTime
        from order_cart
        order by cartId
    </select>

    <select id="getById" resultMap="cart">
        select customerId,productId,productAmount,price,addTime,modifiedTime
        from order_cart
        where cartId = #{id}
    </select>

    <insert id="insert" >
        insert into order_cart(customerId,productId,productAmount,price,addTime,modifiedTime)
        values(#{customerId},#{productId},#{productAmount},#{price},#{addTime},#{modifiedTime})
    </insert>

    <delete id="delete">
        delete from order_cart where cartId = #{id}
    </delete>

    <update id="update">
        update order_cart
        set customerId = #{customerId},productId = #{productId},productAmount = #{productAmount},
        price = #{price},addTime = #{addTime},modifiedTime = #{modifiedTime}
        where cartId = #{cartId}
    </update>
</mapper>